<mvc:View
  controllerName="sapui5.tools.odatavalidator.controller.Home"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Page
    id="homePageId"
    class="sapUiResponsiveContentPadding">

    <customHeader>
			<Toolbar>
        <ToolbarSpacer/>
				<Title
          text="{i18n>home.title}"
          level="H2"/>
				<ToolbarSpacer/>
				<!--
        TODO : Implémenter la méthode avec un MessagePopover
        Button
          icon="sap-icon://hint"
          press="onAboutPressed"/>
          -->
			</Toolbar>
		</customHeader>

    <content>
      <Text
        text="{i18n>home.radioButtonTitle}"/>
      <RadioButtonGroup
        columns="5"
        class="sapUiMediumMarginBottom"
        select="onSelectedItem">
        <buttons>
          <RadioButton id="radioButtonReadId" text="{i18n>home.radioButtonRead}"/>
          <RadioButton id="radioButtonCreateId" text="{i18n>home.radioButtonCreate}"/>
          <RadioButton id="radioButtonUpdateId" text="{i18n>home.radioButtonUpdate}"/>
          <RadioButton id="radioButtonRemoveId" text="{i18n>home.radioButtonRemove}"/>
        </buttons>
      </RadioButtonGroup>

      <Label
        text="{i18n>home.labelQuery}"/>
      <Input
        placeholder="{i18n>home.inputPlaceHolderQuery}"
        value="{homeViewModel>/query}"/>

      <Label
        id="labelJSON"
        text="{i18n>home.labelJSON}"/>
      <TextArea
        id="textAreaJSON"
        growing="true"
        value="{homeViewModel>/jsonText}"
        placeholder="{i18n>home.textAreaPlaceHolderJSONText}"
        width="100%"/>

      <Button
        press="onButtonExecutePressed"
        text="{i18n>home.buttonExecute}"
        type="Accept"/>
        
      <Label
        id="labelResponseQuery"
        text="{i18n>home.labelResponseQuery}"/>
      <TextArea
        id="textAreaResponseQuery"
        growing="true"
        value="{homeViewModel>/response}"
        width="100%"/>
    </content>
      
    <footer>
      <Toolbar>
        <ToolbarSpacer/>
        <Label
          text="{homeViewModel>/version}"/>
        <ToolbarSpacer/>
        <Label
          text="{homeViewModel>/language}"/>
      </Toolbar>
    </footer>

  </Page>
</mvc:View>