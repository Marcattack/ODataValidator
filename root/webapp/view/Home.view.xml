<mvc:View
  controllerName="sapui5.tools.odatavalidator.controller.Home"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Page
    id="homePageId"
    class="sapUiResponsiveContentPadding">

    <customHeader>
			<Toolbar>
        <ToolbarSpacer/>
				<Title
          text="{i18n>home.title}"
          level="H2"/>
				<ToolbarSpacer/>
				<!--
        TODO : Implémenter la méthode avec un MessagePopover
        Button
          icon="sap-icon://hint"
          press="onAboutPressed"/>
          -->
			</Toolbar>
		</customHeader>

    <content>
      <IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding"
        select="onSelectedTab"
        selectedKey="{homeViewModel>/selectedTabKey}"
        expandable="false">
        <items>
          <!-- Read -->
          <IconTabFilter
            id="iconTabBarFilterRead"
					  text="{i18n>home.iconTabFilterRead}"
            key="Read">
            <Panel
              headerText="{i18n>home.panelHeaderTextParameters}">
              <Label
                text="{i18n>home.labelQuery}"/>
              <Input
                placeholder="{i18n>home.inputPlaceHolderQuery}"
                value="{homeViewModel>/query}"/>
              <Button
                press="onButtonExecutePressed"
                text="{i18n>home.buttonExecute}"
                type="Accept"/>
            </Panel>

            <Panel
              headerText="{i18n>home.panelHeaderTextResponseQuery}">
              <TextArea
                growing="true"
                value="{homeViewModel>/response}"
                width="100%"/>
            </Panel>
          </IconTabFilter>

          <!-- Create -->
          <IconTabFilter
            id="iconTabBarFilterCreate"
					  text="{i18n>home.iconTabFilterCreate}"
            key="Create">
            <Panel
              headerText="{i18n>home.panelHeaderTextParameters}">
              <Label
                text="{i18n>home.labelQuery}"/>
              <Input
                placeholder="{i18n>home.inputPlaceHolderQuery}"
                value="{homeViewModel>/query}"/>
              <Label
                text="{i18n>home.labelJSON}"/>
              <TextArea
                growing="true"
                value="{homeViewModel>/jsonText}"
                placeholder="{i18n>home.textAreaPlaceHolderJSONText}"
                width="100%"/>
              <Button
                press="onButtonExecutePressed"
                text="{i18n>home.buttonExecute}"
                type="Accept"/>
            </Panel>

            <Panel
              headerText="{i18n>home.panelHeaderTextResponseQuery}">
              <TextArea
                growing="true"
                value="{homeViewModel>/response}"
                width="100%"/>
            </Panel>
          </IconTabFilter>

          <!-- Update -->
          <IconTabFilter
            id="iconTabBarFilterUpdate"
					  text="{i18n>home.iconTabFilterUpdate}"
            key="Update">
            <Panel
              headerText="{i18n>home.panelHeaderTextParameters}">
              <Label
                text="{i18n>home.labelQuery}"/>
              <Input
                placeholder="{i18n>home.inputPlaceHolderQuery}"
                value="{homeViewModel>/query}"/>
              <Label
                text="{i18n>home.labelJSON}"/>
              <TextArea
                growing="true"
                value="{homeViewModel>/jsonText}"
                placeholder="{i18n>home.textAreaPlaceHolderJSONText}"
                width="100%"/>
              <Button
                press="onButtonExecutePressed"
                text="{i18n>home.buttonExecute}"
                type="Accept"/>
            </Panel>

            <Panel
              headerText="{i18n>home.panelHeaderTextResponseQuery}">
              <TextArea
                growing="true"
                value="{homeViewModel>/response}"
                width="100%"/>
            </Panel>
          </IconTabFilter>

          <!-- Remove -->
          <IconTabFilter
            id="iconTabBarFilterRemove"
					  text="{i18n>home.iconTabFilterRemove}"
            key="Remove">
            <Panel
              headerText="{i18n>home.panelHeaderTextParameters}">
              <Label
                text="{i18n>home.labelQuery}"/>
              <Input
                placeholder="{i18n>home.inputPlaceHolderQuery}"
                value="{homeViewModel>/query}"/>
              <Button
                press="onButtonExecutePressed"
                text="{i18n>home.buttonExecute}"
                type="Accept"/>
            </Panel>

            <Panel
              headerText="{i18n>home.panelHeaderTextResponseQuery}">
              <TextArea
                growing="true"
                value="{homeViewModel>/response}"
                width="100%"/>
            </Panel>
          </IconTabFilter>
        </items>
      </IconTabBar>
    </content>
      
    <footer>
      <Toolbar>
        <ToolbarSpacer/>
        <Label
          text="{homeViewModel>/version}"/>
        <ToolbarSpacer/>
        <Label
          text="{homeViewModel>/language}"/>
      </Toolbar>
    </footer>

  </Page>
</mvc:View>